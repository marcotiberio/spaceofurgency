{% if items|length > 0 %}
  <div class="flyntComponent componentSpacing {{ options.theme }}" id="{{ preContentHtml|lower|replace({' ': ''})}}" is="flynt-grid-projects-latest">
    <div class="container">
      <h3 class="preContent">
        {{ preContentHtml|e('wp_kses_post') }}
      </h3>
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item">
            <div class="content">
              <a href="{{ item.link }}" class="content-link" title="{{ item.title }}">
                <img class="content-image lazyload"
                  src="{{ item.thumbnail.src }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.src.id)}}"
                  data-sizes="auto">
                <div class="content-inner">
                  <h2 class="content-title">{{ item.title }}</h2>
                  <div class="content-tags">
                  {% for tag in item.terms('tag')  %}
                    <span class="visuallyHidden">{{ __("Tag:", "flynt") }}</span><span class="tag">{{ tag }}</span>
                  {% endfor %}
                  </div>
                </div>
              </a>
            </div>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
