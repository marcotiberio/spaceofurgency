{% if items|length > 0 %}
  <div class="flyntComponent componentSpacing {{ options.theme }}" is="flynt-grid-posts-events-upcoming">
    <div class="container">
      {% if preContent %}
        <h3 class="preContent">
          {{ preContent }}
        </h2>
      {% endif %}
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item">
            <div class="content">
              <div class="content-image">
                <img class="lazyload"
                  src="{{ item.thumbnail.src }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
                  data-sizes="auto"
                  alt="{{ item.thumbnail.alt|e }}">
              </div>
              <div class="content-inner">
                <div class="content-inner--top">
                  <div class="h1 content-title">
                    <a href="{{ item.link }}" class="content-link" title="{{ item.title }}">{{ item.title }}</a>
                  </div>
                </div>
                <div class="content-inner--bottom">
                  <div class="left">
                    <span>Date</span>
                    <span>Where</span>
                    <span>What</span>
                  </div>
                  <div class="right">
                    {% if item.start_date %}
                      <span>{{ item.start_date|date("d.m.Y")|escape('wp_kses_post') }}</span>
                      <span>-</span>
                    {% endif %}
                    <span>{{ item.end_date|date("d.m.Y")|escape('wp_kses_post') }}</span>
                    <span>{{ item.postWhere }}</span>
                    <span>{{ item.postWhat }}</span>
                  </div>
                  <div class="content-date">
                    
                    <span>
                      
                    <span>
                  </div>
                  <div class="where">
                    
                    
                  </div>
                  <div class="what">
                    
                    
                  </div>
                </div>
                {# {{ item.introHtml|e('wp_kses_post') }} #}
              </div>
            </div>
          </li>
          <hr>
        {% endfor %}
      </ul>
      <div class="allPostsLink">
        <a href="{{ postTypeArchiveLink }}" class="link">{{ labels.allPosts }}</a>
      </div>
    </div>
  </div>
{% endif %}
